<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_headlineHint"
                android:paddingTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important safety information"
                android:textSize="27dp"
                android:paddingLeft="15dp"
                android:textColor="@color/TextWhite"></TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_notCall"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/ic_material_attention"

            ></ImageView>


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Always drive safely. Stick to the rules and keep your eyes on the road at all times."
            android:textColor="@color/TextWhite"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"></TextView>


        <TextView
            android:id="@+id/tv_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="You are responsible for driving your vehicle safely. Distractions while driving can cause accidents resulting in property damage, personal injury or death."
            android:textColor="@color/TextWhite"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"></TextView>

        <TextView
            android:id="@+id/tv_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Only use the app when it is safe to do so. You must be aware of the traffic at all times."
            android:textColor="@color/TextWhite"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"></TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>