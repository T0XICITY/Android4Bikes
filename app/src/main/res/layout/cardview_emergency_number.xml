<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_institution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Red400Light"/>

        <TextView
            android:id="@+id/tv_institution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="#333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/Green400Light"/>

        <ImageButton
            android:id="@+id/ib_Call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:contentDescription="Call_Institution"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_emergency__call"
            android:background="@color/Yellow400Light"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>